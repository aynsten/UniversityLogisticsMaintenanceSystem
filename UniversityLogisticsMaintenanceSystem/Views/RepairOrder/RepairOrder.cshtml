<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>维修单管理</title>
    <script src="../../Scripts/jquery-3.4.1.js"></script>
    <script src="../../Source/packages/layui/layui.js"></script>
    <script src="../../Scripts/Project/RepairOrder/repairOrder.js"></script>
    <link rel="stylesheet" href="../../Source/packages/layui/css/layui.css">
</head>
<body>
    <blockquote class="layui-elem-quote layui-quote-nm">
        <form class="layui-form">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">模糊查询</label>
                    <div class="layui-input-block">
                        <input type="text" name="input" id="input" lay-verify="required" style="width:400px;" placeholder="支持模糊查询故障内容、地址、联系方式以及时间" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <button type="button" class="layui-btn layui-btn-normal" id="search">
                    <i class="layui-icon">&#xe615;</i>
                </button>
            </div>
        </form>
    </blockquote>
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 50px;">
        <legend>维修单管理&gt;&gt;Maintenance Table Management</legend>
    </fieldset>
    <blockquote class="layui-elem-quote layui-quote-nm">
        <!--维修单的表格-->
        <table id="table_repair" lay-filter="table_repair"></table>
    </blockquote>
    <!--选择维修人员的弹窗-->
    <div style="padding-left:20px;padding-right:20px;padding-top:20px" id="div_selectMan" hidden>
        <form class="layui-form">
            <div class="layui-form-item">
                <label class="layui-form-label"><span style="color:red">*</span>维修人员</label>
                <div class="layui-input-inline">
                    <select id="select_man" name="select_man" lay-verify="required">
                        <option value="">请选择维修人员</option>
                    </select>
                </div>
            </div>
        </form>
    </div>

    <!--layui模版引擎文档(laytpl)-->
    <!--修改表格的工具列-->
    <script type="text/html" id="toolbar">
        {{# if(d.Status === '待分配'){}}
        <a class="operation" lay-event="send" title="派遣维修任务">
            <i class="layui-icon layui-icon-release"></i>派遣
        </a>
        {{#  } }}
        {{# if(d.Status === '进行中'){}}
        <a class="operation" lay-event="finish" title="完成本次维修">
            <i class="layui-icon layui-icon-ok"></i>完成
        </a>
        {{# } }}
    </script>
    <!--修改表格的状态列-->
    <script type="text/html" id="statusbar">
        {{# if(d.Status === '待分配'){ }}
        <span style="color:#FFC125;">待分配</span>
        {{#  } }}
        {{# if(d.Status === '进行中'){ }}
        <span style="color:#00CD00;">进行中</span>
        {{#  } }}
        {{# if(d.Status === '已完成'){ }}
        <span style="color: #FF0000">已完成</span>
        {{#  } }}
        {{# if(d.Status === '已撤销'){ }}
        <span style="color:#55ffff;">已撤销</span>
        {{#  } }}
    </script>
</body>
</html>
